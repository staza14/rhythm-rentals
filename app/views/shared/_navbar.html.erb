<div class="navbar-container navbar-container-closed" id="mySidebar">
<%# take line out if not working %>
  <% if user_signed_in? %>
  <div class="navbar-container-children navbar-button navbar-container-closed">
    <ul class="navbar-unordered-list">
      <%# Home Link %>
      <li class="navbar-list-item">
        <button class="navbar-button top-of-page">
          <%= link_to "Home", vinyls_path, class: "nav-link" %>
        </button>
      </li>
      <%# Dashboard Link %>
      <li class="navbar-list-item">
        <button class="navbar-button rounded-button">
          <%= link_to "Dashboard", dashboard_path, class: "nav-link" %>
        </button>
      </li>
    </ul>
  </div>
  <%# Vinyl overflow button %>
  <div class="navbar-container-children navbar-container-closed">
    <div class="vinyl-div closebtn" onclick="closeNav()">
      <div class="vinyl-image"></div>
    </div>
  </div>
  <%# Log Out Link %>
  <div class="navbar-container-children bottom-of-page navbar-container-closed">
    <button class="navbar-button rounded-button log-out">
      <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
    </button>
  </div>
  <% else %>
  <div class="navbar-container-children navbar-container-closed">
    <ul class="navbar-unordered-list">
      <li class="navbar-list-item">
        <button class="navbar-button rounded-button top-of-page">
          <%= link_to "Home", vinyls_path, class: "nav-link" %>
        </button>
      </li>
    </ul>
  </div>
  <%# Vinyl overflow button %>
  <div class="navbar-container-children">
    <div class="vinyl-div closebtn" onclick="closeNav()">
      <div class="vinyl-image"></div>
    </div>
  </div>
  <div class="navbar-container-children navbar-container-closed">
    <ul class="navbar-unordered-list">
      <li class="navbar-list-item" id="navbar-bottom-login">
        <button class="navbar-button rounded-button log-in"><%= link_to "Login", new_user_session_path, class: "nav-link" %></button>
      </li>
      <li class="navbar-list-item" id="navbar-bottom-login">
        <button class="navbar-button rounded-button sign-up"><%= link_to "Sign Up", new_user_session_path, class: "nav-link" %></button>
      </li>
    </ul>
  </div>
  <% end %>
</div>

<div class="half-vinyl-div openbtn" id="clickable-vinyl" onclick="openNav()">
  <div class="half-vinyl-image" id="clickable-vinyl" class="openbtn" onclick="openNav()"></div>
</div>

<script>
  function openNav() {
    navbar = document.getElementById("mySidebar")
    vinyl = document.querySelector(".half-vinyl-div openbtn")
    navbar.classList.remove('navbar-container-closed')
    vinyl.classList.add("d-none")
  }

  function closeNav() {
    navbar = document.getElementById("mySidebar")
    navbar.classList.add('navbar-container-closed')
  }
</script>



