<div class="navbar-container" id="mySidebar">
<%# take line out if not working %>
<a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
  <% if user_signed_in? %>
  <div class="flex">
    <ul class="navbar-unordered-list">
      <div class="navbar-top">
        <li class="navbar-list-item">
          <button class="navbar-button rounded-button"><%= link_to "Home", vinyls_path, class: "nav-link" %></button>
        </li>
        <li class="navbar-list-item">
          <button class="navbar-button rounded-button"><%= link_to "Bookings", dashboard_path, class: "nav-link" %></button>
        </li>
        <li class="navbar-list-item">
          <button class="navbar-button rounded-button"><%= link_to "My Vinyls", vinyldashboard_path, class: "nav-link" %></button>
        </li>
      </div>
      <div class="navbar-bottom" style="top: 80%;">
        <li class="navbar-list-item">
          <button class="navbar-button rounded-button log-out"><%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %></button>
        </li>
      </div>
    </ul>
  </div>
  <% else %>
  <div class="flex">
    <ul class="navbar-unordered-list">
      <li class="navbar-list-item">
        <button class="navbar-button rounded-button"><%= link_to "Home", vinyls_path, class: "nav-link" %></button>
      </li>
      </li>
        <li class="navbar-list-item">
          <button class="navbar-button rounded-button"><%= link_to "Bookings", dashboard_path, class: "nav-link" %></button>
        </li>
        <li class="navbar-list-item">
          <button class="navbar-button rounded-button"><%= link_to "My Vinyls", vinyldashboard_path, class: "nav-link" %></button>
        </li>
      <div class="navbar-bottom" style="top: 75%">
        <li class="nav-item" id="navbar-bottom-login">
          <button class="navbar-button rounded-button log-in"><%= link_to "Login", new_user_session_path, class: "nav-link" %></button>
        </li>
        <li class="nav-item" id="navbar-bottom-login">
          <button class="navbar-button rounded-button sign-up"><%= link_to "Sign Up", new_user_session_path, class: "nav-link" %></button>
        </li>
      </div>
    </ul>
  </div>
  <% end %>
</div>
<div id="main">
  <button class="openbtn" onclick="openNav()">&#9776; Open Sidebar</button>
</div>

<script>
function openNav() {
  document.getElementById("mySidebar").style.width = "12%";
  document.getElementById("main").style.marginLeft = "12%";
}

function closeNav() {
  document.getElementById("mySidebar").style.width = "0";
  document.getElementById("main").style.marginLeft= "0";
}
</script>
