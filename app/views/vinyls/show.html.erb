
<div class="container">
      <div class="product-card col-4 px-0 m-5">
        <div class= "card-body">
         <h1><%= @vinyl.album_title %></h1>
          <%= image_tag  @vinyl.cover_image, class:"index-image"%>
          <%= @vinyl.songs %>

      <div data-controller="toggle" class="mt-5 container">
        <button data-action="click->toggle#fire" class="btn btn-outline-primary">Book this Vinyl</button>

            <div data-toggle-target="togglableElement" class="d-none">
              <%= simple_form_for([@vinyl, @booking]) do |f| %>
                <%= f.input :begin_date, html5: true %>
                <%= f.input :end_date, html5: true %>
                <%= f.submit %>
              <% end %>

            </div>

      </div>
</div>
