
<div class="container">
  <div class="row">
    <div class="col">

      <h1 class ="d-flex justify-content-center"><%= @vinyl.album_title %></h1>


      <%= @vinyl.songs %>

      <p><%= link_to "Book Vinyl", new_vinyl_booking_path(@vinyl)%></p>

    </div>
  </div>
</div>

<div data-controller="toggle" class="mt-5 container">
  <button data-action="click->toggle#fire" class="btn btn-outline-primary">Book this Vinyl</button>

    <div data-toggle-target="togglableElement" class="d-none">
    <%= simple_form_for([@vinyl, @booking]) do |f| %>
      <%= f.input :begin_date, html5: true %>
      <%= f.input :end_date, html5: true %>
      <%= f.submit %>
    <% end %>

    </div>

</div>
