<h1>Create a new add</h1>

<div class="container">
<%= simple_form_for @vinyl do |f| %>
  <%= f.input :album_title %>
  <%= f.input :cover_image %>
  <%= f.input :artist %>
  <%= f.input :release_year %>
  <%= f.input :genre %>
  <%= f.input :songs %>
  <%= f.input :pickup_adress ,
  input_html: {data: {pickup_adress_autocomplete_target: "pickup_adress"}},
  wrapper_html: {data: {controller: "pickup-adress-autocomplete",
  address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}} %>
  <%= f.input :price %>
  <%= f.submit %>
<% end %>

</div>
